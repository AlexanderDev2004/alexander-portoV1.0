---
import Layout from '../layouts/Layout.astro';
import CertificationsGrid from '../components/CertificationsGrid.svelte';
import { certifications } from '../data/certifications';
---

<Layout>
  <div class="container mx-auto px-6 py-8 max-w-6xl">
    <!-- Back Button -->
    <a 
      href="/"
      class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline mb-8"
      style="font-family: 'Plus Jakarta Sans', sans-serif;"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back
    </a>

    <!-- Header -->
    <div class="mb-12">
      <h1 
        class="font-bold text-gray-900 dark:text-gray-100 mb-4"
        style="font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700; font-size: 3rem;"
      >
        Certifications
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl">
        Professional certifications and training achievements that demonstrate my commitment to continuous learning and expertise in various domains.
      </p>
    </div>

    <!-- Certifications Grid -->
    <CertificationsGrid client:load items={certifications} />
  </div>
</Layout>
